{
  "name": "new_project_root",
  "version": "1.0.0",
  "description": "Root project for TextBound Castle Crawl",
  "type": "module",
  "scripts": {
    "test": "echo \"No root tests specified.\" && exit 0",
    "install:all": "npm install --prefix server && npm install --prefix client",
    "build": "npm-run-all build:frontend build:backend",
    "build:frontend": "npm --prefix client run build",
    "build:backend": "npm --prefix server run build",
    "dev": "npm run build:frontend && npm-run-all --parallel start:frontend-dev start:backend-dev",
    "start": "npm run build && npm run start:backend-prod",
    "start:frontend-dev": "npm --prefix client run start",
    "start:backend-dev": "npm --prefix server run dev",
    "start:backend-prod": "npm --prefix server run start",
    "check-types": "npm-run-all --parallel check-types:client check-types:server",
    "check-types:client": "npm --prefix client run check-types",
    "check-types:server": "npm --prefix server run check-types",
    "db:generate": "npm --prefix server run db:generate",
    "db:migrate": "npm --prefix server run db:migrate",
    "db:push": "npm --prefix server run db:push",
    "db:studio": "npm --prefix server run db:studio"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engine": "node>=23.6.0",
  "author": "Walter Conley",
  "license": "ISC"
}
