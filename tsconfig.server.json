{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "outDir": "./server/dist",
    "rootDir": "./server",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "client"
  ]
}
